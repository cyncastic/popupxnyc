!!!5
%html
  %head
    %title POP UP X NYC
    %meta{ name: 'viewport', content: 'width=840, initial-scale=1, user-scalable=no' }
    %link{ href: 'http://fonts.googleapis.com/css?family=Lato:100,400|Oswald', rel: 'stylesheet', type: 'text/css' }
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body

    .container

      %header.main
        %h1 POP UP X NYC
        %nav.main
          %ul
            %li= link_to 'Blog', blogs_path, class: cp(blogs_path)
            = render '/categories/listcats'
            %li= link_to 'Contact', contact_path, class: cp(contact_path)
        - if session[:user_id]
          %nav.admin
            %ul
              %li= link_to 'Admin', admin_path, class: cp(new_blog_path)
              %li= link_to 'New Blog', new_blog_path, class: cp(new_blog_path)
              %li= link_to 'Artwork', artworks_path, class: cp(artworks_path)
              %li= link_to 'Logout', logout_path, class: 'logout', method: :delete 
      
      .content
        = yield